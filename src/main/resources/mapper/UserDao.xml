    <!--根据id删除user_role-->
    <delete id="deleteUserRole">
        DELETE FROM user_role
        WHERE user_id = #{id}
    </delete>


    <!--创建user_role-->
    <insert id="createUserRole">
        INSERT INTO
        user_role(user_id, role_id)
        VALUES
        <foreach collection="roleList" item="item" separator=",">
            (#{id},#{item})
        </foreach>
