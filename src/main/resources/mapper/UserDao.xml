    <!--修改密码-->
    <update id="changePwd">
        UPDATE user
        SET
            salt     = #{user.salt},
            password = #{user.password}
        WHERE
            id = #{user.id}
    </update>

    <!--根据唯一标识获得id、password、salt-->
    <select id="getUserPwdByTag" resultType="com.wl.college.entity.User">
        SELECT
        id, password, salt
        FROM user
        WHERE 1=1
        <if test="id != null">
            AND id = #{id,jdbcType=INTEGER}
        </if>
        <if test="mail != null">
            AND mail = #{mail,jdbcType=VARCHAR}
        </if>
        <if test="phone != null">
